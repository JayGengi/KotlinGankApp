<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_title_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/img_jaygengi_avatar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/github_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/nickname"
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_view_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/padding_common_d"
            android:paddingBottom="@dimen/padding_common_d"
            android:text="@string/view_homepage"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/textSize_small" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/color_gray"
            android:textColor="@color/color_white"
            android:textSize="15sp"
            android:text="感谢API和kotlinMvp框架作者"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1"
            android:divider="@drawable/line_h"
            android:showDividers="beginning|middle|end"
            android:orientation="vertical">
            <TableRow
                android:divider="@drawable/line_h"
                android:showDividers="middle"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gank_url"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Gank.io"
                    android:textColor="@color/md_blue_500"
                    android:textSize="14sp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/demo_url"
                    android:layout_width="1dp"
                    android:layout_weight="4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Kotlin+MVP"
                    android:textColor="@color/md_blue_500"
                    android:textSize="14sp"
                    android:gravity="start"/>
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/color_gray"
                android:textColor="@color/color_white"
                android:textSize="15sp"
                android:text="主要的第三方引用"/>
            <TableRow
                android:divider="@drawable/line_h"
                android:showDividers="middle"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:text="UI"
                    android:textColor="@color/color_black"
                    android:textSize="14sp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/qmui_url"
                    android:layout_width="1dp"
                    android:layout_weight="4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:text="QMUI"
                    android:textColor="@color/md_blue_500"
                    android:textSize="14sp"
                    android:gravity="start"/>
            </TableRow>
            <TableRow
                android:divider="@drawable/line_h"
                android:showDividers="middle">
                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="网络库"
                    android:textColor="@color/color_black"
                    android:textSize="14sp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/retrofit_url"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_weight="4"
                    android:layout_marginStart="10dp"
                    android:text="Retrofit"
                    android:textColor="@color/md_blue_500"
                    android:textSize="14sp"
                    android:gravity="start"/>
            </TableRow>
            <TableRow
                android:divider="@drawable/line_h"
                android:showDividers="middle"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:text="[很赞的适配器封装]"
                    android:textColor="@color/color_black"
                    android:textSize="14sp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/adapter_url"
                    android:layout_width="1dp"
                    android:layout_weight="4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:text="BaseQuickAdapter"
                    android:textColor="@color/md_blue_500"
                    android:textSize="14sp"
                    android:gravity="start"/>
            </TableRow>
            <TableRow
                android:divider="@drawable/line_h"
                android:showDividers="middle">
                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="下拉刷新"
                    android:textColor="@color/color_black"
                    android:textSize="14sp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/smartRefreshLayout_url"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_weight="4"
                    android:layout_marginStart="10dp"
                    android:text="smartRefreshLayout"
                    android:textColor="@color/md_blue_500"
                    android:textSize="14sp"
                    android:gravity="start"/>
            </TableRow>
            <TableRow
                android:divider="@drawable/line_h"
                android:showDividers="middle">
                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="多状态View"
                    android:textColor="@color/color_black"
                    android:textSize="14sp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/multiple_status_view_url"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_weight="4"
                    android:layout_marginStart="10dp"
                    android:text="multiple-status-view"
                    android:textColor="@color/md_blue_500"
                    android:textSize="14sp"
                    android:gravity="start"/>
            </TableRow>
            <TableRow
                android:divider="@drawable/line_h"
                android:showDividers="middle">
                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="..."
                    android:textColor="@color/color_black"
                    android:textSize="14sp"
                    android:gravity="start"/>
                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="1dp"
                    android:layout_weight="4"
                    android:layout_marginStart="10dp"
                    android:text="..."
                    android:textColor="@color/md_blue_500"
                    android:textSize="14sp"
                    android:gravity="start"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</LinearLayout>